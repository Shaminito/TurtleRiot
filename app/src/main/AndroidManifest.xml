<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.turtleriot">

    <application
        android:name=".UsuarioApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PortadaManuActivity"
            android:label="@string/title_activity_portada_manu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterUserActivity" />
        <activity android:name=".InfoAccionesActivity" />
        <activity
            android:name=".ConfigUserActivity"
            android:label="@string/title_activity_config_user" />
        <activity android:name=".acciones.AccionesSeguidosActivity" />
        <activity android:name=".acciones.CrearAccionesActivity" />
        <activity android:name=".acciones.AdministrarAccionesActivity"></activity>
    </application>
</manifest>
