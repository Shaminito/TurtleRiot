<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flAccionesSeguidos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.turtleriot.acciones.AccionesSeguidosActivity">

    <LinearLayout
        android:id="@+id/llAccionesSeguidos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_et_top">

        <LinearLayout
            android:id="@+id/llAccionesSeguidos2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivAccionesSeguidos"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/padding_imagen"
                android:src="@drawable/btn_acciones" />

            <TextView
                android:id="@+id/tvAccionesSeguidos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/life_s_a_beach"
                android:text="@string/txt_tvAccionesSeguidos"
                android:textSize="18sp" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</FrameLayout>