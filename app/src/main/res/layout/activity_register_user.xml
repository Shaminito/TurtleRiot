<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlRegisterUser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:padding="@dimen/padding_fondo"
    tools:context="com.turtleriot.RegisterUserActivity">

    <LinearLayout
        android:id="@+id/llRegisterUser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivLOGOSplash"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo" />

        <LinearLayout
            android:id="@+id/llRegisterUser2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iwLogoUser"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/margin_et_top"
                app:srcCompat="@drawable/logousuarios" />

            <EditText
                android:id="@+id/etRegUserNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/background_light"
                android:hint="@string/hint_etRegUserNombre"
                android:inputType="textPersonName"
                android:textColor="@color/textColor_Whiite"
                android:textColorHint="@color/color_hint" />

            <ImageView
                android:id="@+id/iwLogoEmail"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/margin_et_top"
                app:srcCompat="@drawable/logoemile" />

            <EditText
                android:id="@+id/etRegUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/background_light"
                android:hint="@string/hint_etRegCorreoNombre"
                android:inputType="textEmailAddress"
                android:textColor="@color/textColor_Whiite"
                android:textColorHint="@color/color_hint" />

            <ImageView
                android:id="@+id/iwPassword"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="@dimen/margin_et_top"
                app:srcCompat="@drawable/logocontrasennia" />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/background_light"
                android:inputType="textPassword"
                android:textColor="@color/textColor_Whiite" />

        </LinearLayout>

        <Button
            android:id="@+id/btnRegistrar"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_et_top"
            android:background="@color/color_btnSignIn"
            android:fontFamily="@font/life_s_a_beach"
            android:onClick="c_btnRegistrar"
            android:text="@string/txt_btnRegistrar"
            android:textColor="@color/textColor_Whiite"
            android:textSize="18sp" />

    </LinearLayout>
</RelativeLayout>