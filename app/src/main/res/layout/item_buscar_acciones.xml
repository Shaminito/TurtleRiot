<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_et_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTituloBACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/life_s_a_beach"
            android:text="Titulo:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvPlayaACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/life_s_a_beach"
            android:text="@string/txt_tvPlayaTitle"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivFotoBACC"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/images" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvFechaBACC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/life_s_a_beach"
            android:text="Fecha:"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>